<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.Login">

        <ImageView
            android:id="@+id/ivlogologin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="67dp"
            android:src="@drawable/logo" />
        <LinearLayout
            android:id="@+id/llusernamelogin"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@drawable/lightgrey"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:weightSum="1"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:hint="Username"
                android:background="@null"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:background="@drawable/profile"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llpasswordlogin"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@drawable/lightgrey"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:weightSum="1"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:hint="Password"
                android:background="@null"
                android:paddingLeft="10dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:background="@drawable/lock"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tvloginlogin"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/redbg"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Login"
            android:gravity="center"
            android:textColor="@color/white"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:weightSum="2"
    >
    <TextView
        android:id="@+id/tvforgetpasslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password ?"
        android:gravity="center_horizontal"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tvsignuplogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:gravity="center_horizontal"
        android:layout_weight="1"
 />
</LinearLayout>

    </LinearLayout>
</ScrollView>
