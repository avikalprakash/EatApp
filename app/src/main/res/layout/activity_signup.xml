<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Signup">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/llusernamesignup"
    android:layout_width="300dp"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:background="@drawable/lightgrey"
    android:layout_marginTop="90dp"
    android:layout_centerHorizontal="true"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:weightSum="1"
    >
<EditText
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.9"
    android:hint="Username"
    android:background="@null"
    android:paddingLeft="10dp"/>
<ImageView
    android:layout_width="0dp"
    android:layout_height="25dp"
    android:layout_weight="0.1"
    android:layout_gravity="center"
    android:background="@drawable/profile"
    />

</LinearLayout>
        <LinearLayout
            android:id="@+id/llgendersignup"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@id/llusernamesignup"
            android:layout_centerHorizontal="true"
            android:background="@drawable/darkgrey"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            >
            <Spinner
                android:id="@+id/spgendersignup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingLeft="10dp"
                android:textAlignment="center"
                />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/llemailsignup"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/lightgrey"
        android:layout_below="@+id/llgendersignup"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:weightSum="1"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:hint="Email"
            android:background="@null"
            android:paddingLeft="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:background="@drawable/email"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llmobilesignup"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/lightgrey"
        android:layout_below="@+id/llemailsignup"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:weightSum="1"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:hint="Mobile No."
            android:background="@null"
            android:paddingLeft="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:background="@drawable/mobile"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llpasswordsignup"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/lightgrey"
        android:layout_below="@+id/llmobilesignup"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:weightSum="1"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:hint="Password"
            android:background="@null"
            android:paddingLeft="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:background="@drawable/lock"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llrpasswordsignup"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/darkgrey"
        android:layout_below="@+id/llpasswordsignup"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:weightSum="1"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:hint="Password"
            android:background="@null"
            android:textColor="@color/white"
            android:paddingLeft="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:background="@drawable/lockgrey"
            />

    </LinearLayout>
<TextView
    android:layout_width="200dp"
    android:layout_height="45dp"
    android:background="@drawable/redbg"
    android:layout_below="@+id/llrpasswordsignup"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:text="Sign Up"
    android:gravity="center"
    android:textColor="@color/white"
    />
    </RelativeLayout>
</ScrollView>